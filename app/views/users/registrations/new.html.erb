<div class="container" >
  <div class="row">
    <div id="content-left" class="content-area col-md-6">
      <div class ="content-box user-info">
        <h2 class="content-box-head">利用者登録</h2>
        <div class="content-box-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <p>氏名(ニックネーム可)</p>
              <p><%= f.text_field :name, autofocus: true, autocomplete: "名前" %></p>
            </div>

            <div class="field">
              <p>メールアドレス</p>
              <p><%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %></p>
            </div>

            <div class="field">
              <p>パスワード</p>
              <%= f.password_field :password, autocomplete: "パスワード" %>
              <p><% if @minimum_password_length %>
                <p>(パスワードは<%= @minimum_password_length %> 文字以上必要です)</p>
              <% end %></p>
            </div>

            <div class="field">
              <p>パスワード確認</p>
              <p><%= f.password_field :password_confirmation, autocomplete: "new-password" %></p>
            </div>

            <div class="actions">
              <p><%= f.submit "登録", class:'btn' %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
