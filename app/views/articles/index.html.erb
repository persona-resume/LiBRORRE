<div class="container" >
  <div class="row">
   <div id="content-left" class="content-area col-md-6 col-xs-12">
      <div class ="content-box">
        <h2 class="content-box-head">検索結果(エラー)</h2>
        <div class="content-box-body">
          <%= render '/articles/article_lists_wrapper', articles: @articles %>
        </div>
        <div class="content-box-foot">
          <% if user_signed_in? %>
            <div>
              <%= link_to 'エラー記事の作成' ,new_article_path, class:'btn btn-sub'%>
            </div>
          <% else %>
            <p class="foot-not-active">
              エラー記事の作成(ログイン時のみ)
            </p>
          <% end %>
        </div>
      </div>
    </div>

    <div id="content-right" class="content-area col-md-6 col-xs-12">
      <div class ="content-box">
        <h2 class ="content-box-head">検索結果(ストーリー)</h2>
        <div class="content-box-body">
          <%= render '/stories/story_lists_wrapper', stories: @stories %>
        </div>
      </div>
    </div>

  </div>
</div>